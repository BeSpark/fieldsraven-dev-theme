<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<div class="page-width page-width--narrow">
  <hr>
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
  {% comment %}
  <code>{{ request.page_type }}<br>
    {% if request.page_type == 'page' %}bingo!{% endif%}<br>
    page.seo.hidden: {{ page.metafields.seo.hidden.value }}
  </code><br>
  {% endcomment %}
  {% liquid
    case page.handle
      when 'jquery-example'
        render 'include-example-jquery'
      when 'axios-example'
        render 'include-example-axios'
      when 'fetch-example'
        render 'include-example-fetch'
      when 'storefront-kit-example'
        render 'include-example-storefront-kit'
      when 'stress-test'
        render 'include-stress-test'
      when 'mac'
        render 'include-mac', page_id: page.id
    endcase
  %}
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "spaced-section"
}
{% endschema %}
